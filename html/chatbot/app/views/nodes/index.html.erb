<html>
	<head>

		<%= render :partial => 'shared/bootstrap' %>
	</head>
	<body>
	<%= render :partial => 'shared/navbar' %>
	<div class="container-fluid">
		<h1>Saraswati - View Nodes</h1>
		<%= link_to 'New node', nodes_new_path, class: "btn btn-primary" %>
		<div style="margin-top: 1em;">
			<% @nodes.each do |node| %>
				<%= link_to node.nugget, nodes_path + '/' + node.id.to_s %> <%= link_to 'Delete', node.id.to_s, :method => :delete, data: {confirm: 'Are you sure you want to delete this node?'}, class: 'btn btn-primary' %><br />
			<% end %>
		</div>
	</div>
	</body>
</html>