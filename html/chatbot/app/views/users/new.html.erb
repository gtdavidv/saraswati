<!DOCTYPE html>
<html>


<h1>User Signup</h1>

<%= form_for :user, url: '/users', :html => {:class => "form-horizontal"} do |f| %>

<div class="form-group">
  <%= f.label :name, "Name:", class: "col-md-1" %>
  <div class="col-md-4"> 
  <%= f.text_field :name, class: "form-control" %>
 </div>
</div>

 <div class="form-group">
	 <%= f.label :email, "Email:", class:"col-md-1" %>
	 <div class="col-md-4">
	 <%= f.text_field :email, class: "form-control col-md-4" %>
 	</div>
 </div>

 <div class="form-group">
	<%= f.label :password, "Password:", class:"col-md-1"%>
	<div class="col-md-4">
  		<%= f.password_field :password, class:"form-control col-md-4" %>
  	</div>
  </div>

<div class="form-group">
	<%= f.label :password, "Password Confirmation:", class:"col-md-1" %>
  	<div class="col-md-4">
	  <%= f.password_field :password_confirmation, class: "col-md-4 form-control" %>
  	</div>
  </div>

  <div class="col-md-offset-1">
  <%= f.submit "Submit", class: "btn btn-primary" %>
  </div>

<% end %>

</html>

