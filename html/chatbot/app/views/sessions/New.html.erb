<!DOCTYPE html>
<html>

<h1>Login</h1>

<%= form_tag '/login', :class => "form-horizontal" do %>

	<div class="form-group">
	<%= label :email, "Email:", class:"col-md-1" %>
		<div class="col-md-4 ">
			<%= email_field_tag :email, nil, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
	<%= label :password, "Password:", class: "col-md-1" %>
	  	<div class="col-md-4 ">
	  		<%= password_field_tag :password, nil, class: "form-control" %>
	  	</div>
	  </div>

  <div class="col-md-offset-1">
	  <%= submit_tag "Submit", class: "btn btn-primary" %>
	</div>

<% end %>
</html>